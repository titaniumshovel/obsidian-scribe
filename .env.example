# Obsidian Scribe Environment Variables Example
# Copy this file to .env and fill in your actual values
# These environment variables override config.yaml settings

# API Keys and Authentication
# OpenAI API key for Whisper transcription
OPENAI_API_KEY=your-openai-api-key-here

# Alternative: Replicate API token if using Replicate
# REPLICATE_API_TOKEN=your-replicate-api-token-here

# Alternative: Custom Whisper API endpoint and key
# WHISPER_API_ENDPOINT=https://your-custom-whisper-api.com/v1/audio/transcriptions
# WHISPER_API_KEY=your-custom-api-key-here

# Configuration Overrides
# Override any config.yaml setting using the pattern:
# OBSIDIAN_SCRIBE_SECTION_SUBSECTION_KEY=value

# Paths
# OBSIDIAN_SCRIBE_PATHS_WATCH_FOLDER=/path/to/audio/files
# OBSIDIAN_SCRIBE_PATHS_OUTPUT_FOLDER=/path/to/transcripts
# OBSIDIAN_SCRIBE_PATHS_TEMP_FOLDER=/path/to/temp
# OBSIDIAN_SCRIBE_PATHS_ARCHIVE_FOLDER=/path/to/archive

# Audio Processing
# OBSIDIAN_SCRIBE_AUDIO_MAX_FILE_SIZE_MB=1000
# OBSIDIAN_SCRIBE_AUDIO_CHUNK_DURATION=600
# OBSIDIAN_SCRIBE_AUDIO_CHUNK_OVERLAP=30

# Transcription Settings
# OBSIDIAN_SCRIBE_TRANSCRIPTION_API_ENDPOINT=https://api.openai.com/v1/audio/transcriptions
# OBSIDIAN_SCRIBE_TRANSCRIPTION_MODEL=whisper-1
# OBSIDIAN_SCRIBE_TRANSCRIPTION_LANGUAGE=en
# OBSIDIAN_SCRIBE_TRANSCRIPTION_TEMPERATURE=0.0
# OBSIDIAN_SCRIBE_TRANSCRIPTION_MAX_RETRIES=3
# OBSIDIAN_SCRIBE_TRANSCRIPTION_TIMEOUT=300

# Diarization Settings
# OBSIDIAN_SCRIBE_DIARIZATION_ENABLED=true
# OBSIDIAN_SCRIBE_DIARIZATION_METHOD=pyannote
# OBSIDIAN_SCRIBE_DIARIZATION_MAX_SPEAKERS=0

# Logging
# OBSIDIAN_SCRIBE_LOGGING_CONSOLE_LEVEL=INFO
# OBSIDIAN_SCRIBE_LOGGING_FILE_LEVEL=DEBUG
# OBSIDIAN_SCRIBE_LOGGING_USE_COLORS=true

# Processing
# OBSIDIAN_SCRIBE_PROCESSING_NUM_WORKERS=2
# OBSIDIAN_SCRIBE_PROCESSING_QUEUE_SIZE=100
# OBSIDIAN_SCRIBE_PROCESSING_AUTO_RETRY=true

# Archive Settings
# OBSIDIAN_SCRIBE_ARCHIVE_ENABLED=true
# OBSIDIAN_SCRIBE_ARCHIVE_RETENTION_DAYS=30
# OBSIDIAN_SCRIBE_ARCHIVE_COMPRESSION=zip

# Cache Settings
# OBSIDIAN_SCRIBE_CACHE_ENABLED=true
# OBSIDIAN_SCRIBE_CACHE_TTL_SECONDS=3600
# OBSIDIAN_SCRIBE_CACHE_MAX_MEMORY_ITEMS=100

# Integration
# OBSIDIAN_SCRIBE_INTEGRATION_OBSIDIAN_VAULT=/path/to/obsidian/vault
# OBSIDIAN_SCRIBE_INTEGRATION_AUTO_OPEN=false

# Advanced Settings
# OBSIDIAN_SCRIBE_ADVANCED_DEBUG=false
# OBSIDIAN_SCRIBE_ADVANCED_PROFILING=false

# System Resources
# Limit memory usage (in MB, 0 for no limit)
# OBSIDIAN_SCRIBE_ADVANCED_MEMORY_LIMIT=0

# Limit CPU usage (0.0-1.0, where 1.0 = 100%)
# OBSIDIAN_SCRIBE_ADVANCED_CPU_LIMIT=0

# PyAnnote Authentication (if using Hugging Face models)
# HF_TOKEN=your-huggingface-token-here

# CUDA/GPU Settings (for PyAnnote diarization)
# CUDA_VISIBLE_DEVICES=0  # Use first GPU
# CUDA_VISIBLE_DEVICES=-1 # Disable GPU

# Proxy Settings (if behind corporate firewall)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# Development/Debug Settings
# PYTHONUNBUFFERED=1  # Disable output buffering
# OBSIDIAN_SCRIBE_DEV_MODE=true  # Enable development mode